mixin Pagination(page, totalPages, width, prefix)
  -
    var start = page - width;
    var end = page + width;

    if(start < 1){
      end += 1 - start;
      start = 1;
    }

    if(end > totalPages){
      start -= end - totalPages;
      end = totalPages;
    }

    if(start < 1){
      start = 1;
    }

    var i = start - 1


  .preview__toggle-wrapper
    ul.preview__pagination.pagination
      if start > 1
        li
          a(class='pagination__button button button--backwards' aria-label='Страница назад' href=`${prefix}page=${page - 1}`) Назад
      while i++ < end
        li(class=`pagination__item ${i === page ? 'pagination__item--active' : ''}`)
          a(href=`${prefix}page=${i}`)= i
      if end < totalPages
        li
          a(class='pagination__button button button--forward' aria-label='Страница вперед' href=`${prefix}page=${page + 1}`) Вперёд
