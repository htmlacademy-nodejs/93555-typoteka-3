mixin HotNews(news, className)
  section.main-page__hot.hot
    h2.hot__name
      | Самое обсуждаемое 
      span.hot__icon.hot__icon--fire
    ul.hot__list
      each item in news
        li.hot__list-item
          a.hot__list-link(href='#')
            | #{item.text}
            sup.hot__link-sup #{item.comments}