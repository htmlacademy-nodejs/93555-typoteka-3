mixin HotNews(articles, className)
  section.main-page__hot.hot
    h2.hot__name
      | Самое обсуждаемое
      span.hot__icon.hot__icon--fire
    ul.hot__list
      each article in articles
        li.hot__list-item
          a.hot__list-link(href='#')
            - const announce = article.announce.length > 100 ? article.announce.slice(0, 99).concat(`…`) : article.announce
            | #{announce}
            sup.hot__link-sup #{article.comments.length}
